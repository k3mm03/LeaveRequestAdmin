<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/gridbgColor"
    app:strokeColor="@color/colorGrey"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recyclerview_text_padding"
                android:textColor="@color/colorGrey"
                android:text="Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recyclerview_text_padding"
                android:textColor="@color/colorGrey"
                android:text="Description" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/linear"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recyclerview_text_padding"
                android:textColor="@color/colorGrey"
                android:text=":" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recyclerview_text_padding"
                android:textColor="@color/colorGrey"
                android:text=":" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/middleLinear"
            android:orientation="vertical">

            <TextView
                android:id="@+id/role_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:padding="@dimen/recyclerview_text_padding" />

            <TextView
                android:id="@+id/role_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:padding="@dimen/recyclerview_text_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoLinear"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <android.support.design.button.MaterialButton
                android:id="@+id/role_edit_btn"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Edit"
                android:textAlignment="center"
                app:backgroundTint="@color/editbtnColorYellow"
                app:strokeColor="@color/colorGrey"
                android:textColor="@color/colorGrey"
                app:strokeWidth="1dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/role_delete_btn"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:text="Delete"
                android:textAlignment="center"
                app:backgroundTint="@color/requestDeclineRed"
                app:strokeColor="@color/colorGrey"
                android:textColor="@color/colorGrey"
                app:strokeWidth="1dp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.card.MaterialCardView>