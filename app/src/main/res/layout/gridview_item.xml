<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/gridbgColor"
    android:minHeight="@dimen/card_height"
    android:padding="32dp"
    app:cardCornerRadius="@dimen/coner_radius"
    app:strokeColor="@color/colorGrey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/materialcardview_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorGrey"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/materialcardview_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.design.card.MaterialCardView>