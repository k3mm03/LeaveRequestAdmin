<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ed_width"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="@dimen/coner_radius"
    app:strokeColor="@color/colorGrey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poppup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gridbgColor"
            android:padding="8dp"
            android:textColor="@color/colorGrey"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Title"
                android:textColor="@color/colorGrey" />

            <EditText
                android:id="@+id/popup_title_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreyLight"
                android:padding="8dp"
                android:textColor="@color/colorGrey" />

            <TextView
                android:id="@+id/popup_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Description"
                android:textColor="@color/colorGrey" />

            <EditText
                android:id="@+id/popup_description_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreyLight"
                android:padding="8dp"
                android:textColor="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:orientation="horizontal">

                <android.support.design.button.MaterialButton
                    android:id="@+id/popup_save_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrey" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/popup_cancel_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:padding="4dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrey"
                    app:backgroundTint="@color/requestDeclineRed" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.design.card.MaterialCardView>